\mode<presentation>

\RequirePackage{tikz}

\useinnertheme{circles}

\setbeamersize{text margin left=15pt}
\setbeamersize{text margin right=15pt}

\setbeamerfont{structure}{series=\bfseries, size=\Large}
\setbeamerfont{framesubtitle}{series=\mdseries, size=\small}
\setbeamerfont{subtitle}{series=\mdseries, size=\small}
\setbeamerfont{alerted text}{series=\bfseries}

% get rid of navigation symbols, headline, and footline
\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{headline}{}
\setbeamertemplate{footline}{}

% template for each frame title
\setbeamertemplate{frametitle}
{
    \nointerlineskip
    \begin{beamercolorbox}[wd=\paperwidth,
                           leftskip=\beamer@leftmargin,
                           rightskip=\beamer@rightmargin]{frametitle}
        \vskip3px
        \strut\insertframetitle\strut\par
        \ifx\insertframesubtitle\@empty\else{
            \usebeamerfont{framesubtitle}
            \usebeamercolor[fg]{framesubtitle}
            \insertframesubtitle\strut\par}%
        \fi
        \vskip3px
    \end{beamercolorbox}
    \ifbeamercolorempty[bg]{accent}{}{
        \nointerlineskip
        \begin{beamercolorbox}[ht=3pt, wd=\paperwidth]{accent}
        \end{beamercolorbox}}
}

\setbeamertemplate{title page}
{
    \vskip-1em
    \nointerlineskip%
    \begin{beamercolorbox}[wd=\paperwidth,
                           leftskip=\beamer@leftmargin,
                           rightskip=\beamer@rightmargin]{title}
        \vskip1em
        {\usebeamerfont{title}\inserttitle\par}%
        \ifx\insertsubtitle\@empty\else%
        {\usebeamerfont{subtitle}\insertsubtitle\par}
        \fi%
        \vskip1em\par
        {\usebeamerfont{author}\insertauthor\par}
        {\usebeamerfont{institute}\insertinstitute\par}
        \vskip0.5em\par
        {\usebeamerfont{date}\insertdate\par}
        \vskip0.5em
    \end{beamercolorbox}
    \nointerlineskip
    \begin{beamercolorbox}[ht=3pt, wd=\paperwidth]{accent2}
    \end{beamercolorbox}
    \nointerlineskip
    \begin{beamercolorbox}[ht=\paperheight, wd=\paperwidth]{accent}
    \end{beamercolorbox}
}

